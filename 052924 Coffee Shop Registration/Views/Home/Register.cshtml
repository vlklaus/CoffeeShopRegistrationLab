<form asp-method="post" asp-action="Result">
    <label for="firstName"> First Name: </label>
    <input type="text" name="firstName" id="firstName" required="required"/> <br />

    <label for="lastName">Last Name: </label>
    <input type="text" name="lastName" id="lastName" required="required" /> <br />

    <label for="email">Email: </label>
    <input type="email" name="email" id="email" required="required" /> <br />

    <label for="password">Password (Password must be at least 8 characters long, contain at least one uppercase letter, one lowercase letter, and one number.): </label> <br />
    <input type="password" name="password" id="password" required="required" minlength="8" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).*" /> <br />
        

    <input type="submit" />
</form>